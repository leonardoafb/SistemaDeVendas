@using Microsoft.AspNetCore.Http
@model SenhaModel

<h2>Alteração de Senha</h2>
@{
    try
    {
        var erro = TempData["ErrorSenha"].ToString();
        <h5 class="text-danger">@erro</h5>
    }
    catch
    {


    }
}
<form asp-controller="Configuracao" asp-action="Senha">
    <input type="hidden" asp-for="Id" value="@try {@ViewBag.Senha.Id} catch { } " />
    <div class="form-group">
        <label>Senha Atual</label>
        <input asp-for="SenhaAtual" type="text" class="form-control" value="@try {@ViewBag.Senha.SenhaAtual} catch { }" />
        <span asp-validation-for="SenhaAtual" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Senha Nova</label>
        <input asp-for="Senha1" type="text" class="form-control" value="@try {@ViewBag.Senha.Senha1} catch { }" />
        <span asp-validation-for="Senha1" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Confirme a senha</label>
        <input asp-for="Senha2" type="text" class="form-control" value="@try {@ViewBag.Senha.Senha2} catch { }" />
        <span asp-validation-for="Senha2" class="text-danger"></span>
    </div>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor

    <button type="submit" class="btn btn-block btn-success" onclick="Alterar()">Alterar</button>
</form>

<script>
    function Alterar() {
        window.location.href = "..Configuracao/SenhaAlterada/";
    }
</script>




